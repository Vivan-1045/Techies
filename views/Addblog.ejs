<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add-Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mt-4">
                    <label for="title" class="title">Cover Image</label>
                    <input type="file" class="form-control"  name="coverImage" >
                </div>
                <div class="mt-3">
                    <label for="title" class="title">Title</label>
                    <input type="title" class="form-control"  name="title" placeholder="Title of post">
                </div>
                <div class="mt-3">
                    <label for="floatingTextarea">Body</label>
                    <textarea class="form-control" placeholder="describe your post" id="floatingTextarea" name="body"></textarea>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>